<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.buscis_c1_l6.userpasswordsubmit.MainActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/User"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:text="@string/username"
        tools:text="@string/username"
        android:layout_marginLeft="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/TextPwNv"
        app:layout_constraintTop_toTopOf="@+id/VisUsername" />

    <TextView
        android:id="@+id/TextPwNv"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:text="@string/restrictedPass"
        tools:text="@string/restrictedPass"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/Submit"
        app:layout_constraintRight_toRightOf="@+id/User"
        android:layout_marginTop="69dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="65dp"
        app:layout_constraintLeft_toLeftOf="@+id/User" />

    <TextView
        android:id="@+id/Submit"
        android:layout_width="103dp"
        android:layout_height="44dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:onClick="onClick"
        tools:text="@string/Success"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/InvisPass"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="27dp" />

    <EditText
        android:id="@+id/VisUsername"
        android:layout_width="219dp"
        android:layout_height="37dp"
        android:layout_marginEnd="3dp"
        android:ems="10"
        android:inputType="textVisiblePassword"
        android:textSize="14sp"
        android:layout_marginRight="3dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/InvisPass" />

    <EditText
        android:id="@+id/InvisPass"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:ems="10"
        android:inputType="textPassword"
        android:singleLine="false"
        android:textSize="14sp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/VisUsername"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="88dp"
        app:layout_constraintLeft_toLeftOf="@+id/VisUsername" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginBottom="34dp"
        android:layout_marginEnd="23dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginStart="23dp"
        app:layout_constraintBottom_toTopOf="@+id/VisUsername"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/nexus"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

</android.support.constraint.ConstraintLayout>
